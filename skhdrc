# Select space [1-9] with alt + number
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Move selected window to space [1-9] and focus on that space with alt + shift + number
alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
alt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
alt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
alt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
alt + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
alt + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
alt + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9

# Open Brave Browser with alt + b, ensuring a new window is opened
alt - b : open -na "Brave Browser"

# Open Alacritty terminal with alt + return, ensuring a new instance is started
alt - return : open -na Alacritty

# File explorer
alt - w : open -n ~/

# Toggle window full-screen
alt - f : yabai -m window --toggle zoom-fullscreen

# Close the focused window with alt + shift + q
alt + shift - q : yabai -m window --close

# Increase/Decrease Window Width
alt - l : yabai -m window --resize right:20:0
alt - h : yabai -m window --resize right:-20:0

# Increase/Decrease Window Height
alt - j : yabai -m window --resize bottom:0:20
alt - k : yabai -m window --resize bottom:0:-20

# Switching Window Locations
alt - n : yabai -m window --swap next
alt - p : yabai -m window --swap prev
alt - right : yabai -m window --swap east
alt - left : yabai -m window --swap west
alt - up : yabai -m window --swap north
alt - down : yabai -m window --swap south
